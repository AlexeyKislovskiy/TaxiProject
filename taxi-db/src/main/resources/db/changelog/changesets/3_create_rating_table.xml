<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="003" author="fertdt">
        <createTable tableName="rating">
            <column name="uuid" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="rating_pk"/>
            </column>
            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE" defaultValueComputed="NOW()"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="get_rating_user_id" type="uuid">
                <constraints nullable="false" foreignKeyName="rating_get_fk"
                             referencedTableName="account" referencedColumnNames="uuid"/>
            </column>
            <column name="put_rating_user_id" type="uuid">
                <constraints nullable="false" foreignKeyName="rating_put_fk"
                             referencedTableName="account" referencedColumnNames="uuid"/>
            </column>
        </createTable>
        <sql>
            ALTER TABLE rating
                ADD CONSTRAINT rating_value_check CHECK (value &gt;= 1 AND value &lt;= 5);
            ALTER TABLE rating
                ADD CONSTRAINT rating_status_check CHECK (status in('DRIVER_TO_PASSENGER','PASSENGER_TO_DRIVER'));
        </sql>
    </changeSet>

</databaseChangeLog>